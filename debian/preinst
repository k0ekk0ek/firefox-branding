#!/bin/sh
# template preinst script for firefox-branding, modified .jar files and .png
# icons under /usr/share/iceweasel/icons are added automatically
#
# diverted icons are suffixed with .orig because firefox searches for them
# using the extensions .png, 16.png, 32.png, 48.png, .xpm, 16.xpm
#
# see: dh_installdeb(1)

set -e

case "$1" in
    install|upgrade)
    # mozicon16.xpm
    dpkg-divert --package firefox-branding \
      --divert /usr/share/iceweasel/icons/mozicon16.xpm.orig \
      --rename /usr/share/iceweasel/icons/mozicon16.xpm
    # mozicon50.xpm
    dpkg-divert --package firefox-branding \
      --divert /usr/share/iceweasel/icons/mozicon50.xpm.orig \
      --rename /usr/share/iceweasel/icons/mozicon50.xpm
    # mozicon128.png
    dpkg-divert --pacakge firefox-branding \
      --divert /usr/share/iceweasel/icons/mozicon128.png.orig \
      --rename /usr/share/iceweasel/icons/mozicon128.png
    # default16.png
    dpkg-divert --package firefox-branding \
      --divert /usr/share/iceweasel/chrome/icons/default/default16.png.orig \
      --rename /usr/share/iceweasel/chrome/icons/default/default16.png
    # default32.png
    dpkg-divert --package firefox-branding \
      --divert /usr/share/iceweasel/chrome/icons/default/default32.png.orig \
      --rename /usr/share/iceweasel/chrome/icons/default/default32.png
    # default48.png
    dpkg-divert --package firefox-branding \
      --divert /usr/share/iceweasel/chrome/icons/default/default48.png.orig \
      --rename /usr/share/iceweasel/chrome/icons/default/default48.png
    # browser.jar
    dpkg-divert --package firefox-branding \
      --divert /usr/share/iceweasel/chrome/browser.jar.orig \
      --rename /usr/share/iceweasel/chrome/browser.jar
    # en-US.jar
    dpkg-divert --package firefox-branding \
      --divert /usr/share/iceweasel/chrome/en-US.jar.orig \
      --rename /usr/share/iceweasel/chrome/en-US.jar
    ;;

    abort-upgrade)
    # mozicon16.xpm
    dpkg-divert --package firefox-branding --rename \
      --remove /usr/share/iceweasel/icons/mozicon16.xpm
    # mozicon50.xpm
    dpkg-divert --package firefox-branding --rename \
      --remove /usr/share/iceweasel/icons/mozicon50.xpm
    # mozicon128.png
    dpkg-divert --pacakge firefox-branding --rename \
      --remove /usr/share/iceweasel/icons/mozicon128.png
    # default16.png
    dpkg-divert --package firefox-branding --rename \
      --remove /usr/share/iceweasel/chrome/icons/default/default16.png
    # default32.png
    dpkg-divert --package firefox-branding --rename \
      --remove /usr/share/iceweasel/chrome/icons/default/default32.png
    # default48.png
    dpkg-divert --package firefox-branding --rename \
      --remove /usr/share/iceweasel/chrome/icons/default/default48.png
    # browser.jar
    dpkg-divert --package firefox-branding --rename \
      --remove /usr/share/iceweasel/chrome/browser.jar
    # en-US.jar
    dpkg-divert --package firefox-branding --rename \
      --remove /usr/share/iceweasel/chrome/en-US.jar
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
