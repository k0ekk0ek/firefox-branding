#!/bin/sh
# template postrm script for firefox-branding, modified .jar files and .png
# icons under /usr/share/iceweasel/icons are added automatically
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)

    # mozicon16.xpm
    dpkg-divert --package firefox-branding --remove --rename --divert \
      /usr/share/iceweasel/icons/mozicon16.xpm.real \
      /usr/share/iceweasel/icons/mozicon16.xpm
    # mozicon50.xpm
    dpkg-divert --package firefox-branding --remove --rename --divert \
      /usr/share/iceweasel/icons/mozicon50.xpm.real \
      /usr/share/iceweasel/icons/mozicon50.xpm
    # mozicon128.png
    dpkg-divert --package firefox-branding --remove --rename --divert \
      /usr/share/iceweasel/icons/mozicon128.png.real \
      /usr/share/iceweasel/icons/mozicon128.png
    # default16.png
    dpkg-divert --package firefox-branding --remove --rename --divert \
       /usr/share/iceweasel/chrome/icons/default/default16.png.real \
       /usr/share/iceweasel/chrome/icons/default/default16.png
    # default32.png
    dpkg-divert --package firefox-branding --remove --rename --divert \
       /usr/share/iceweasel/chrome/icons/default/default32.png.real \
       /usr/share/iceweasel/chrome/icons/default/default32.png
    # default48.png
    dpkg-divert --package firefox-branding --remove --rename --divert \
       /usr/share/iceweasel/chrome/icons/default/default48.png.real \
       /usr/share/iceweasel/chrome/icons/default/default48.png
    # browser.jar
    dpkg-divert --package firefox-branding --remove --rename --divert \
       /usr/share/iceweasel/chrome/browser.jar.real \
       /usr/share/iceweasel/chrome/browser.jar
    # en-US.jar
    dpkg-divert --package firefox-branding --remove --rename --divert \
       /usr/share/iceweasel/chrome/en-US.jar.real \
       /usr/share/iceweasel/chrome/en-US.jar
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
